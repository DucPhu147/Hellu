<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2051037"
    tools:context="com.example.hellu.CallingActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="150dp"
        android:id="@+id/callingImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:text="Phú đang gọi cho bạn"
        android:id="@+id/txtCallingContent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/callingImage"
        app:layout_constraintLeft_toLeftOf="@+id/callingImage"
        app:layout_constraintRight_toRightOf="@+id/callingImage"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_call_end_24"
            android:tint="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnAcceptCall"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/cancel_phone_call_button"
            android:padding="20dp"
            android:elevation="15dp"
            android:id="@+id/btnCancelCall"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@id/btnCancelCall"
            app:layout_constraintRight_toRightOf="@id/btnCancelCall"
            app:layout_constraintLeft_toLeftOf="@id/btnCancelCall"
            android:id="@+id/txtCancelCall"
            android:text="Hủy"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="15dp"
            android:padding="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btnCancelCall"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/accept_phone_call_button"
            android:tint="#fff"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_round_call_24"
            android:id="@+id/btnAcceptCall"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnAcceptCall"
            app:layout_constraintRight_toRightOf="@id/btnAcceptCall"
            app:layout_constraintLeft_toLeftOf="@id/btnAcceptCall"
            android:textColor="#fff"
            android:id="@+id/txtAcceptCall"
            android:text="Chấp nhận"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>