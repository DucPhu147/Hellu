<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hellu.UserProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:layout_collapseMode="parallax"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarPrimary"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/userProfile_Image"
            android:layout_marginHorizontal="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/ic_launcher_round"/>
        <!--background của imageview dưới là #000000 với opacity là 95-->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="18px"
            android:background="@drawable/circle"
            android:id="@+id/openGallery"
            app:tint="#fff"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            app:layout_constraintBottom_toBottomOf="@+id/userProfile_Image"
            app:layout_constraintRight_toRightOf="@id/userProfile_Image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="20dp"
            android:id="@+id/userProfile_UserName"
            app:layout_constraintLeft_toRightOf="@+id/userProfile_Image"
            app:layout_constraintBottom_toTopOf="@+id/userProfile_Email"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@+id/userProfile_Image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserEmail"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/userProfile_Email"
            app:layout_constraintTop_toBottomOf="@+id/userProfile_UserName"
            app:layout_constraintLeft_toRightOf="@+id/userProfile_Image"
            app:layout_constraintBottom_toBottomOf="@+id/userProfile_Image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
