<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hellu.UserProfileActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/colorPrimary">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/userProfile_Image"
        android:transitionName="imageTransition"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_launcher"/>
    <!--background của imageview dưới là #000000 với opacity là 95-->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="20px"
        android:background="@drawable/circle"
        android:id="@+id/userProfile_Gallery"
        android:src="@drawable/ic_image_white_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/userProfile_Image"
        app:layout_constraintRight_toRightOf="@id/userProfile_Image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
