<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:background="#fff"
    tools:context="com.example.hellu.MessageActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:theme="@style/ToolbarPrimary">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userMessage_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/userMessage_status"
                android:background="@drawable/online_status"
                app:layout_constraintBottom_toBottomOf="@+id/userMessage_image"
                app:layout_constraintRight_toRightOf="@+id/userMessage_image"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="userName"
                    android:id="@+id/userMessage_name"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlackLight"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="userSubText"
                    android:ellipsize="end"
                    android:id="@+id/userMessage_subText"
                    android:textSize="11dp"
                    android:textColor="@color/colorBlackTransparent"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/messageRecycleView"
        android:layout_above="@id/msgView"
        android:overScrollMode="never"
        android:paddingVertical="7dp"
        android:clipToPadding="false"
        android:layout_below="@id/toolbar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/msgView"
        android:paddingVertical="10px"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="45dp"
            android:src="@drawable/ic_baseline_insert_emoticon_24"
            android:id="@+id/btnEmoji"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@color/colorPrimary"
            android:background="@drawable/msg_edittext_button"
            android:layout_height="45dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btnEmoji"
            app:layout_constraintRight_toLeftOf="@+id/btnOpenGallery"
            android:visibility="gone"
            android:id="@+id/imgFromGalleryWrapper"
            android:paddingTop="20px">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imgFromGallery"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:padding="5dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="1dp"
                app:layout_constraintRight_toRightOf="@+id/imgFromGallery"
                app:layout_constraintTop_toTopOf="@+id/imgFromGallery"
                android:id="@+id/removeImgFromGallery"
                android:background="@drawable/circle"
                android:src="@drawable/ic_baseline_close_24"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/msg_edittext_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btnEmoji"
            app:layout_constraintRight_toLeftOf="@+id/btnOpenGallery"
            android:layout_toLeftOf="@+id/btnOpenGallery"
            android:layout_toRightOf="@+id/btnEmoji"
            android:paddingHorizontal="50px"
            android:maxLines="5"
            android:id="@+id/editMessage"
            android:textSize="8pt"
            android:inputType="textMultiLine|textCapSentences"
            android:hint="Nhập nội dung..."/>
        <ImageButton
            android:layout_width="45dp"
            android:src="@drawable/ic_round_photo_camera_24"
            android:id="@+id/btnOpenGallery"
            app:layout_constraintRight_toLeftOf="@+id/btnSendMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@color/colorPrimary"
            android:background="@drawable/msg_edittext_button"
            android:layout_height="45dp"/>
        <ImageButton
            android:layout_width="45dp"
            android:src="@drawable/ic_round_send_24"
            android:id="@+id/btnSendMessage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@color/colorPrimary"
            android:background="@drawable/msg_edittext_button"
            android:layout_height="45dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
