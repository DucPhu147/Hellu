<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="20px"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/selectUser2_userImage"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/selectUser2_removeUser"
        android:background="@drawable/circle"
        android:src="@drawable/ic_baseline_close_24"/>
    <TextView
        android:layout_width="60dp"
        android:layout_marginHorizontal="10px"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/selectUser2_userImage"
        android:id="@+id/selectUser2_userName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="User Name 123132123123123123123"/>
</androidx.constraintlayout.widget.ConstraintLayout>