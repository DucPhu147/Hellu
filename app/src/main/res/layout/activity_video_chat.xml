<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hellu.VideoChatActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E2051037"
            android:id="@+id/main_container">
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:id="@+id/sub_container"
                android:layout_gravity="top|end"
                android:background="#E23E4F8F"/>
        </FrameLayout>
    </FrameLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:padding="20dp"
        android:background="@drawable/cancel_phone_call_button"
        android:tint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_round_call_end_24"
        android:id="@+id/btnCancelCall"/>
</androidx.constraintlayout.widget.ConstraintLayout>